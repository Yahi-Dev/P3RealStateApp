@using RealStateApp.Core.Application.ViewModels.Domain.Property;
@model List<BasePropertyViewModel>

@{
    ViewData["Title"] = "Home Agent";
}

<div class="container" style="margin-top: 250px;">
    @if (Model == null || Model.Count == 0)
    {
        <h2>No hay de propiedades registradas en el sistema</h2>
    }
    else
    {
        
        <div class="row mb-3">
            <div class="col-md-12">
                <h1>Mis Propiedades: </h1>
            </div>
        </div>

        <div class="row">
            @foreach (var property in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">

                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="@property.Image" style="width: 400px; height: 350px;">
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@property.Code</h5>
                            <p class="card-text">
                                <span class="badge bg-primary">@property.PropertyType.Name</span>
                                <span class="badge bg-success">@property.SaleCategory.Name</span>
                            </p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Precio: <span class="float-end">DOP @property.Price.ToString("#,##0.00")</span></li>
                                <li class="list-group-item">Habitaciones: <span class="float-end">@property.Bedrooms</span></li>
                                <li class="list-group-item">Baños: <span class="float-end">@property.Bathrooms</span></li>
                                <li class="list-group-item">Tamaño: <span class="float-end">@property.Size M²</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
