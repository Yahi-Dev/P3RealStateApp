@using RealStateApp.Core.Application.ViewModels.Domain.Improvement
@model SaveImprovementViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "SaveImprovement";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="container-fluid" style="margin-top: 20px;">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-light text-light text-center">
                    <h4 class="text-center">@(editMode ? $"Editando la mejora: {Model.ImprovementType}" : "Creando una nueva mejora")</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Admin" asp-action="@(editMode ? "EditImprovement":"CreateImprovement")" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label asp-for="ImprovementType" class="form-label">Nombre de la mejora: </label>
                            <input type="text" asp-for="ImprovementType" class="form-control" placeholder="Nombre de la mejora"/>
                            <span asp-validation-for="ImprovementType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descripcion de la mejora: </label>
                            <input type="text" asp-for="Description" class="form-control" placeholder="Descripcion detallada la mejora" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Admin" asp-action="ListImprovements" class="btn btn-warning">Volver atras</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>